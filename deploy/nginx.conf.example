server {
    listen 80;
    server_name 60.205.251.109;  # 改成你的域名或IP

    # 访问日志
    access_log /var/log/nginx/stock_analysis_access.log;
    error_log /var/log/nginx/stock_analysis_error.log;

    # 前端静态文件（使用本地编译的build目录）
    location / {
        root /path/to/stock_analysis_app/frontend/build;  # 修改为实际路径
        try_files $uri $uri/ /index.html;
        
        # 禁用缓存，确保更新后立即生效
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
    }

    # 静态资源可以缓存
    location /static/ {
        root /path/to/stock_analysis_app/frontend/build;  # 修改为实际路径
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    # 后端API代理
    location /api/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # 禁用API缓存
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
        add_header Expires "0";
        
        # 超时设置
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Gzip压缩
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/json;
}
